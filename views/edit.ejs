<%include partials/header%>
<div class="container">
<h1 style="text-align:center">Editing <%=c.name%> </h1>
<div class="row">
    <div style="width:30%;margin: 20px auto;">
    <form action="/index/<%=c._id%>/edit?_method=PUT" method="POST">
            <div class="form-group">
            <input type="text" class="form-control" placeholder="name" name="name" value="<%=c['name']%>">
            </div>
            <div class="form-group">
            <input type="number" class="form-control" placeholder="Price" name="price" min="0.01" step="0.01" value="<%=c[price]%>">
            </div>
            <div class="form-group">
            <input type="text" class="form-control" placeholder="image URL" name="url" value="<%=c['image']%>"/>
            </div><div class="form-group">
            <input type="text" class="form-control" placeholder="Description" name="description"value="<%=c['description']%>"/>
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-default btn-block btn-success">Submit</button>
            </div>
    </form>
    <a class="btn btn-primary" href="/index">BACK</a>
    </div>
    </div>
</div>
<%include partials/footer%>
