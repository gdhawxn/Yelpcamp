<%include partials/header%>
<div class="container">
<h1 style="text-align:center">Edit Comment</h1>
<div class="row">
    <div style="width:30%;margin: 20px auto;">
    <form action="/index/<%=c._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
            <input type="text" class="form-control" value="<%=comment.author.username%>" name="author"/>
            </div>
            <div class="form-group">
            <input type="text" class="form-control" value="<%=comment.text%>" name="text"/>
            </div>
            <div class="form-group">
            <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            </div>
    </form>
    <a class="btn btn-primary" href="/index/<%=c._id%>">BACK</a>
    </div>
    </div>
</div>
<%include partials/footer%>
